<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="/stylesheets/login.css">


<section class="login" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <h4 class="mt-1 mb-5 pb-1">Bienvenido a Nardi´s Motos</h4>
                </div>

                <form action="/admin/login" method="post">
                  <p class="text-center sesion">Por favor, inicie su sesion.</p>

                  <div class="form-outline mb-4">
                    <input type="users" id="users" class="form-control" name="users"
                      placeholder="Nombre de Usuario" />
                    <label class="form-label" for="users">Usuario</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="password" id="password" class="form-control" name="password" />
                    <label class="form-label" for="password">Contraseña</label>
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">
                    <button class="btn btn-secondary btn-block fa-lg mb-3 ingresar" type="submit">Ingresar</button>
                    <a class="text-muted" href="#!">Olvidaste contraseña?</a>
                  </div>

                </form>

                {{#if error}}
                <p class="text-center">Usuario o constraseña incorrecta</p>
                {{/if}}

              </div>
            </div>

            
            <div class="col-lg-6 d-flex align-items-center wallpaper">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4 titulo2">Somos más que una compañia de motos</h4>
                <p class="small mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                  tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                  exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


